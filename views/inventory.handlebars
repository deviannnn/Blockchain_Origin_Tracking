<span style="display: none;" id="inv-username">{{username}}</span>
{{#if isFarmer}}
<style>
    #loading {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .loading-spinner {
        border: 8px solid #f3f3f3;
        border-top: 8px solid #3498db;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>
<div id="loading">
    <div class="loading-spinner"></div>
</div>
<div class="inv-container">
    <div class="inv-left">
        <div class="user-info">
            <form>
                <label for="productName">Name:</label>
                <input type="text" id="productName" name="productName" placeholder="Product Name" required><br>

                <label for="productPrice">Price:</label>
                <input type="number" id="productPrice" name="productPrice" placeholder="Product Price" required><br>

                <input type="submit" id="addEditBtn">
            </form>
        </div>
    </div>
    <div class="inv-right">
        <table class="inv-product-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Lot</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th id="action-farmer">Action</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
{{else}}
<div style="margin-top: 50px;">
    <h1 style="text-align: center;text-transform: uppercase;">Your inventories</h1>
    <table class="product-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Lot</th>
                <th>Name</th>
                <th>Price</th>
                {{#if isFarmer}}<th id="action-farmer">Action</th>{{/if}}
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
{{/if}}